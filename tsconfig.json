{
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "lib": [
      "es5",
      "esnext",
      "dom"
    ],
    "jsx": "preserve",
    "declaration": true,
    "sourceMap": true,
    "outDir": "build",
    "rootDirs": [
      "src"
    ],
    "importHelpers": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "incremental": true
  },
  "exclude": [
    "node_modules",
    "out",
    ".firebase",
    ".next",
    "public"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "ts-node": {
    "esm": true
  }
}
